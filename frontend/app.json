{
  "expo": {
    "name": "RelayPoint Elite",
    "slug": "relaypoint-elite",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "web": {
      "bundler": "metro",
      "output": "single",
      "baseUrl": "/RelayPoint",
      "favicon": "./public/favicon.ico",
      "name": "RelayPoint",
      "shortName": "RelayPoint",
      "description": "Enterprise Hospitality Workflow Automation",
      "themeColor": "#001040",
      "backgroundColor": "#000D2E"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.relaypoint.elite",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.relaypoint.elite",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ]
  }
}
